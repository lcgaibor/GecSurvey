<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/verde4"
    android:backgroundTint="@color/verde4"
    android:foregroundTint="@color/verde4"
    tools:context=".MenuApp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="280sp"
        android:background="@drawable/text_bord_menu">

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="157dp"
            android:layout_height="133dp"
            android:layout_marginStart="127dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="127dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/se_survey_removebg_preview" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="115dp"
            android:layout_marginEnd="115dp"
            android:gravity="center"
            android:text="SE Survey"
            android:textColor="@color/colorverde"
            android:textSize="40sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView9" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="98dp"
            android:layout_marginEnd="98dp"
            android:text="Datos para tu seguridad"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageButton
        android:id="@+id/btnUsuario"
        android:layout_width="120dp"
        android:layout_height="110dp"
        android:layout_marginStart="34dp"
        android:layout_marginEnd="66dp"
        android:backgroundTint="@color/colorverde"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnEncuestar"
        app:srcCompat="@drawable/baseline_person_24"
        tools:layout_editor_absoluteY="386dp" />

    <ImageButton
        android:id="@+id/btnCerrarSesion"
        android:layout_width="120dp"
        android:layout_height="110dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="66dp"
        android:backgroundTint="@color/colorverde"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/btnInformacion"
        app:layout_constraintTop_toBottomOf="@+id/btnUsuario"
        app:srcCompat="@drawable/baseline_exit_to_app_24" />

    <ImageButton
        android:id="@+id/btnInformacion"
        android:layout_width="120dp"
        android:layout_height="110dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="34dp"
        android:backgroundTint="@color/colorverde"
        app:layout_constraintEnd_toStartOf="@+id/btnCerrarSesion"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnEncuestar"
        app:srcCompat="@drawable/baseline_info_24" />

    <ImageButton
        android:id="@+id/btnEncuestar"
        android:layout_width="120dp"
        android:layout_height="110dp"
        android:layout_marginStart="71dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@color/colorverde"
        app:layout_constraintEnd_toStartOf="@+id/btnUsuario"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/baseline_newspaper_24"
        tools:layout_editor_absoluteY="386dp" />

</androidx.constraintlayout.widget.ConstraintLayout>