<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:backgroundTint="@color/verde4"
    tools:context=".RegistrarUsuario">

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="413dp"
        android:layout_height="261dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/add_user" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="650sp"
        android:background="@drawable/text_bord"
        android:padding="32sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#299916"
            android:fontFamily="@font/quicksand_bold"
            android:text="Crear Cuenta"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="@color/colorverde"
            tools:layout_editor_absoluteX="38dp"
            tools:layout_editor_absoluteY="40dp" />

        <EditText
            android:id="@+id/contraseniaR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:fontFamily="@font/quicksand_bold"
            android:inputType="textPassword"
            android:text="ContraseÃ±a"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            tools:layout_editor_absoluteX="38dp"
            tools:layout_editor_absoluteY="309dp" />

        <EditText
            android:id="@+id/nombreR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:fontFamily="@font/quicksand_bold"
            android:inputType="textPersonName"
            android:text="Nombre"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            tools:layout_editor_absoluteX="38dp"
            tools:layout_editor_absoluteY="168dp" />

        <EditText
            android:id="@+id/apellidoR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:fontFamily="@font/quicksand_bold"
            android:inputType="textPersonName"
            android:text="Apellido"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            tools:layout_editor_absoluteX="38dp"
            tools:layout_editor_absoluteY="239dp" />

        <EditText
            android:id="@+id/usuarioR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:fontFamily="@font/quicksand_bold"
            android:inputType="textEmailAddress"
            android:text="Correo"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            tools:layout_editor_absoluteX="38dp"
            tools:layout_editor_absoluteY="98dp" />

        <Button
            android:id="@+id/btnRegistrar"
            android:layout_width="210dp"
            android:layout_height="55dp"
            android:background="@drawable/button_border"
            android:backgroundTint="#299916"
            android:fontFamily="@font/quicksand_bold"
            android:text="Registrar"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#FFFFFF"
            tools:layout_editor_absoluteX="77dp"
            tools:layout_editor_absoluteY="409dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>