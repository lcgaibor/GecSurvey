<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:backgroundTint="@color/verde4"
    tools:context=".Login">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageView17"
                android:layout_width="match_parent"
                android:layout_height="272dp"
                android:layout_marginStart="35dp"
                android:layout_marginEnd="29dp"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="2dp"
                app:srcCompat="@drawable/img_login" />

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="800dp"
                android:background="@drawable/text_bord"
                android:elevation="30dp"
                android:orientation="vertical"
                android:paddingLeft="20dp"
                android:paddingTop="50dp"

                android:paddingRight="20dp">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="73dp"
                    android:layout_marginEnd="40dp"
                    android:fontFamily="@font/quicksand_bold"
                    android:text="Comencemos!"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                    android:textColor="@color/colorverde"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/usuario"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginEnd="40dp"
                    android:ems="10"
                    android:fontFamily="@font/quicksand_bold"
                    android:hint="Correo"
                    android:inputType="textEmailAddress"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/contrasenia"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="40dp"
                    android:ems="10"
                    android:fontFamily="@font/quicksand_bold"
                    android:hint="ContraseÃ±a"
                    android:inputType="textPassword"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textColor="@color/black" />

                <Button
                    android:id="@+id/btnIngresar"
                    android:layout_width="180dp"
                    android:layout_height="66dp"
                    android:layout_marginTop="60dp"
                    android:layout_marginStart="95dp"
                    android:background="@drawable/button_border"
                    android:backgroundTint="@color/colorverde"
                    android:elevation="30dp"
                    android:fontFamily="@font/quicksand_bold"
                    android:gravity="center"
                    android:text="Acceder"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textColor="#FFFFFF" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>