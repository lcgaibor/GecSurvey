<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:backgroundTint="@color/verde4"
    tools:context=".Login">

    <ImageView
        android:id="@+id/imageView17"
        android:layout_width="353dp"
        android:layout_height="316dp"
        android:layout_marginStart="28dp"
        android:layout_marginEnd="29dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/img_login" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:background="@drawable/text_bord"
        android:elevation="30dp"
        android:orientation="vertical"
        android:padding="32sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="248dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="142dp"
            android:fontFamily="@font/quicksand_bold"
            android:text="Comencemos!"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="@color/colorverde"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/usuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="40dp"
            android:ems="10"
            android:fontFamily="@font/quicksand_bold"
            android:inputType="textEmailAddress"
            android:hint="Correo"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/contrasenia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="40dp"
            android:ems="10"
            android:fontFamily="@font/quicksand_bold"
            android:inputType="textPassword"
            android:hint="ContraseÃ±a"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/btnIngresar"
            android:layout_width="210dp"
            android:layout_height="55dp"
            android:layout_marginStart="80dp"
            android:layout_marginTop="68dp"
            android:layout_marginEnd="151dp"
            android:background="@drawable/button_border"
            android:backgroundTint="@color/colorverde"
            android:fontFamily="@font/quicksand_bold"
            android:elevation="30dp"
            android:text="Acceder"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#FFFFFF" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>